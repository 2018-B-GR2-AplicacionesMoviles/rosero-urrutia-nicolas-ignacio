<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity2">

    <Button
            android:text="Lista de Estudiantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonList" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintVertical_bias="0.0"
    />
    <Button
            android:text="Check Materias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCheckBox" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonList" app:layout_constraintStart_toStartOf="@+id/buttonList"
            app:layout_constraintEnd_toEndOf="@+id/buttonList" app:layout_constraintHorizontal_bias="0.487"/>
    <Button
            android:text="Radio Group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRadioGroup" app:layout_constraintStart_toStartOf="@+id/buttonCheckBox"
            app:layout_constraintEnd_toEndOf="@+id/buttonCheckBox" app:layout_constraintHorizontal_bias="0.518"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/buttonCheckBox"/>
    <Button
            android:text="Toggle Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnToggle"
            app:layout_constraintEnd_toEndOf="@+id/buttonRadioGroup" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonRadioGroup"
            app:layout_constraintStart_toStartOf="@+id/buttonRadioGroup"/>
</android.support.constraint.ConstraintLayout>